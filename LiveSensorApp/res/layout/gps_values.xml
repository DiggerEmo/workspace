<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/v4">

    <LinearLayout 
        android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
    <LinearLayout 
        android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		

		<ImageButton
		    android:id="@+id/btn_back_sensor" 
		    android:layout_width="wrap_content"
		    android:layout_height="45dp"
		    android:layout_weight="1"
		    android:background="@color/menue_balken" 
		    android:contentDescription="@string/img_btn"
		   
		    android:src="@drawable/back_middle" />

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="45dp"
		    android:layout_gravity="left"
		    android:layout_weight="20"
		    android:background="@color/menue_balken"
		    android:drawable="@drawable/ic_launcher"
		    android:gravity="center"
		    android:src="@drawable/ic_launcher"
		    android:text="@string/fourth_activity"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="#ffffff" />
		</LinearLayout>
		
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.16"
        android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/longitude"
             android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude: " />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude: " />

        <TextView
            android:id="@+id/altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altitude: " />
        
         <TextView
            android:id="@+id/accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accuracy: " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/long_val"
             android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/lati_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/alti_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
        
         <TextView
            android:id="@+id/accu_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
        
        
    </LinearLayout>
</LinearLayout>
</LinearLayout>
</LinearLayout>
